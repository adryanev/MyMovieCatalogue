<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adryanev.dicoding.mymoviecatalogue">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:name=".MyMovieCatalogueApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.main.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.moviedetail.activity.MovieDetailActivity"
            android:parentActivityName=".views.main.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".views.poster.activity.PosterActivity"
            android:parentActivityName=".views.moviedetail.activity.MovieDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".views.search.activity.SearchActivity"
            android:parentActivityName=".views.main.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>